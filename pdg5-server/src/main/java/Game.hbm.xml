<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "pdg5.persistent.Game" table = "game">
      
      <meta attribute = "class-description">
         This class contains the game detail. 
      </meta>
      
      <id name = "ID" type = "int" column = "ID">
         <generator class="native"/>
      </id>
      
      <property name = "title" column = "title" type = "string"/>
      <property name = "player1" column = "player1" type = "int"/>
      <property name = "player2" column = "player2" type = "int"/>
      <property name = "created" column = "created" type = "timestamp"/>
      <property name = "lastActivity" column = "last_activity" type = "timestamp"/>
      <property name = "tournament" column = "tournament" type = "int"/>
      
   </class>
</hibernate-mapping>